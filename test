a!localVariables(
  /* Variables to store search criteria */
  local!contractNumber,
  local!vcn,
  local!ecn,
  local!searchCriteria,
  local!searchResults,
  local!showInterface: true, /* Initialize to show the interface */
  
  /* Interface Layout */
  if(
    local!showInterface,
    a!headerContentLayout(
      header: {
        a!cardLayout(
          contents: {
            a!richTextDisplayField(
              value: {
                a!richTextItem(
                  text: "APPLICATIONS SEARCH",
                  size: "MEDIUM_PLUS", 
                  style: "STRONG"
                )
              }
            )
          },
          style: cons!NW_COLOR_PRIMARY,
          height: "EXTRA_SHORT"
        )
      },
      contents: {
        a!cardLayout(
          contents: {
            a!columnLayout(
              contents: {
                /* Contract Number Field */
                a!sideBySideLayout(
                  items: {
                    a!sideBySideItem(
                      width: "MINIMIZE",
                      item: a!richTextDisplayField(
                        value: {
                          a!richTextItem(
                            text: "Contract Number",
                            size: "STANDARD",
                            style: "STRONG"
                          )
                        }
                      )
                    ),
                    a!sideBySideItem(
                      item: a!textField(
                        label: "Contract Number",
                        labelPosition: "COLLAPSED",
                        value: local!contractNumber,
                        saveInto: {
                          local!contractNumber,
                          a!save(local!searchCriteria, {})
                        },
                        refreshAfter: "UNFOCUS",
                        validations: {}
                      )
                    )
                  }
                ),
                /* VCN Field */
                a!sideBySideLayout(
                  items: {
                    a!sideBySideItem(
                      width: "MINIMIZE", 
                      item: a!richTextDisplayField(
                        value: {
                          a!richTextItem(
                            text: "VCN",
                            size: "STANDARD",
                            style: "STRONG"
                          )
                        }
                      )
                    ),
                    a!sideBySideItem(
                      item: a!textField(
                        label: "VCN",
                        labelPosition: "COLLAPSED", 
                        value: local!vcn,
                        saveInto: {
                          local!vcn,
                          a!save(local!searchCriteria, {})
                        },
                        refreshAfter: "UNFOCUS",
                        validations: {}
                      )
                    )
                  }
                ),
                /* ECN Field */
                a!sideBySideLayout(
                  items: {
                    a!sideBySideItem(
                      width: "MINIMIZE",
                      item: a!richTextDisplayField(
                        value: {
                          a!richTextItem(
                            text: "ECN", 
                            size: "STANDARD",
                            style: "STRONG"
                          )
                        }
                      )
                    ),
                    a!sideBySideItem(
                      item: a!textField(
                        label: "ECN",
                        labelPosition: "COLLAPSED",
                        value: local!ecn,
                        saveInto: {
                          local!ecn,
                          a!save(local!searchCriteria, {})
                        },
                        refreshAfter: "UNFOCUS", 
                        validations: {}
                      )
                    )
                  }
                )
              }
            )
          )
        )
      }
    ),
    /* This will show when showInterface is false */
    {}
  )
)
