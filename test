a!localVariables(
  local!cleanStates: a!forEach(
    items: pv!residenceStates,
    expression: if(
      len(trim(fv!item)) > 0,
      fv!item,
      {}
    )
  ),
  a!dropdownField(
    label: "Residence State",
    choiceLabels: local!cleanStates,
    choiceValues: local!cleanStates,
    value: ri!selectedState,
    saveInto: ri!selectedState
  )
)
